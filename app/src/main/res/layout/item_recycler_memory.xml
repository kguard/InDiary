<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/yellow"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="3sp"
            android:layout_marginTop="3sp"
            android:layout_marginEnd="3sp"
            android:layout_marginBottom="3sp"
            app:cardBackgroundColor="@color/brown_main"
            app:cardCornerRadius="10sp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_memory_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_memory_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_memory_date"
                    app:layout_constraintStart_toStartOf="@+id/tv_memory_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_memory_name"
                    app:layout_constraintVertical_bias="0.099" />

                <TextView
                    android:id="@+id/tv_memory_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_memory_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_memory_name" />

                <ImageView
                    android:id="@+id/iv_memory1"
                    android:layout_width="69dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_memory_tags"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv_memory2"
                    android:layout_width="69dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_memory1"
                    app:layout_constraintStart_toEndOf="@+id/iv_memory1"
                    app:layout_constraintTop_toTopOf="@+id/iv_memory1"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv_memory3"
                    android:layout_width="69dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_memory2"
                    app:layout_constraintStart_toEndOf="@+id/iv_memory2"
                    app:layout_constraintTop_toTopOf="@+id/iv_memory2"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv_memory4"
                    android:layout_width="69dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_memory3"
                    app:layout_constraintStart_toEndOf="@+id/iv_memory3"
                    app:layout_constraintTop_toTopOf="@+id/iv_memory3"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/iv_memeory5"
                    android:layout_width="69dp"
                    android:layout_height="91dp"
                    android:layout_marginStart="10dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_memory4"
                    app:layout_constraintStart_toEndOf="@+id/iv_memory4"
                    app:layout_constraintTop_toTopOf="@+id/iv_memory4"
                    tools:srcCompat="@tools:sample/avatars" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>